<% if signed_in? %>
  <div class="row">
    <aside class="span4">
      <section>
        <%= render 'shared/user_info' %>
      </section>
      <section>
        <%= render 'shared/micropost_form' %>
      </section>
    </aside>
    <div class="span8">
      <h3>Micropost Feed</h3>
      <%= render 'shared/feed' %>
    </div>
  </div>  
<% else %>
  <div class="center hero-unit">
    <h1>Welcome to Kaboozi</h1>

    <h2>
      Chat with your loved ones and friends on
      <a href="http:jilinsights">Kaboozi</a>
      "express yourself".
    </h2>

    <%= link_to "Sign up now!", signup_path, 
                                class: "btn btn-large btn-primary" %>
  </div>

  <%= link_to image_tag("jilinsights_net-logo.png", alt: "powered by jilinsights"), 'http://jilinsights' %>
<% end %>
